<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:background="@drawable/gradient1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo"/>
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginBottom="15dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/camera"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/edit_profile"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/txv_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingTop="10dp"
                        android:textColor="#000"
                        android:text="Edit profile"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ECC27A">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Information"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:id="@+id/txv_general_info"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Name"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/txv_name"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Name"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:background="@null"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Mobile Number"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/txv_mobile"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:background="@null"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Gender"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/txv_gender"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Gender"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:background="@null"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Aadhar Number"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/txv_AadharNo"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Aadhar Number"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:background="@null"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Place"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/txv_phone"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Mobile Number"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:background="@null"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="E-Mail Id"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/txv_E-mail"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:hint="E-Mail Id"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:background="@null"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="15dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="update"
                        android:padding="8dp"
                        android:id="@+id/btn_update"
                        android:gravity="center"
                        android:textColorHint="#000"
                        android:textSize="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>

