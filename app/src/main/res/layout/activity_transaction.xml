<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaction">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_loan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Transaction"
        app:navigationIcon="@drawable/backarrow"
        android:background="#B0ED7C"
        />
    <TextView
        android:id="@+id/txt_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:text="Total Amount"
        android:layout_below="@+id/toolbar_loan"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/txt_amount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:layout_below="@+id/txt_total_amount"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:textColor="#000"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_loan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_amount1"
        android:scrollbars="vertical"/>

</RelativeLayout>

